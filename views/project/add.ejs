<%- layout('./layout/boilerplate.ejs') %>

    <section class="section-addProject">
        <div class="container mt-2">
            <h3 class="mb-3 text-primary">Add New Project</h3>
            <form id="addProject">
                <div class="mb-3 input-group-sm">
                    <label for="projectName" class="form-label small">Project Name</label>
                    <input type="text" class="form-control" id="projectName" placeholder="Enter project name"
                        name="projectName">
                    <span class="small text-warning projectNameError"></span>

                </div>
                <div class="mb-3 input-group-sm">
                    <label for="projectFile" class="form-label small">Upload Project Images</label> <span style="font-size: .75rem;" class="text-secondary">optional</span>
                    <input class="form-control" type="file" id="projectFile" multiple name="image">
                    <span class="small text-warning imageError "></span>
                </div>
                <div class="mb-3 input-group-sm">
                    <label for="projectDescription" class="form-label small">Project Description</label> <span
                        class="ms-3"><button
                            class="btn btn-sm  btn-primary rounded-pill bg-white border-white text-black py-0"
                            id="preview-btn">Generate Preview</button> </span>
                    <p class="small px-2">To better write the line for spacing and alignment use '< br>' and '< hr>'
                                tags in HTML, you can ensure clarity and readability by properly structuring the HTML.
                    </p>
                    <textarea class="form-control" id="projectDescription" rows="15"
                        placeholder="Enter project description" name="description"></textarea>
                    <span class="small text-warning descriptionError "></span>
                </div>

                <div class="mb-3 d-none preview bg-white text-black rounded">
                    <p class="small ">Description Preview </p>
                    <div class="description-preview px-2 "></div>
                </div>


                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </section>

    <script src="/script/addproject.js"></script>